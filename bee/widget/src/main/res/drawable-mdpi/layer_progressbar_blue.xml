<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="#ffaaaaaa"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dp"/>
                <solid android:color="#FF4671FE"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp"/>
                <gradient android:type="sweep" android:angle="90" android:useLevel="false"
                    android:centerX="0" android:centerY="0"
                    android:startColor="#ff4671FE"
                    android:centerColor="#ff4671FE"
                    android:endColor="#FF4EA9FC"/>
            </shape>
        </clip>
    </item>
</layer-list>