<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="32dp" android:right="32dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:color="@android:color/darker_gray" android:width="1dp"/>
            <gradient android:startColor="#8e8e8e"
                android:centerColor="@android:color/white" android:endColor="#dee4fe"
                android:angle="90" android:gradientRadius="50%p"/>
        </shape>
    </item>
    <item android:left="16dp" android:right="16dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:color="@android:color/darker_gray" android:width="1dp"/>
            <gradient android:startColor="@android:color/darker_gray"
                android:centerColor="@android:color/white" android:endColor="@android:color/white"
                android:angle="90"
                android:gradientRadius="100%p"/>
        </shape>
    </item>
    <item android:left="4dp" android:right="4dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:color="@android:color/darker_gray" android:width="1dp"/>
            <gradient android:startColor="@android:color/white"
                android:centerColor="@android:color/white" android:endColor="@android:color/white"
                android:angle="270"
                android:gradientRadius="100%p"/>
        </shape>
    </item>
</layer-list>