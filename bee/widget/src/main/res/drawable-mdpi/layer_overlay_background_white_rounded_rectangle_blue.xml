<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item android:left="64dp" android:top="8dp" android:right="64dp" android:bottom="8dp" >
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#4EA9FC"
                android:centerX="1.0"
                android:centerY="1.0"
                android:endColor="#0072FF"
                android:startColor="#0072FF"
                android:type="linear" />
            <corners android:radius="64dp"/>
        </shape>
    </item>
</layer-list>