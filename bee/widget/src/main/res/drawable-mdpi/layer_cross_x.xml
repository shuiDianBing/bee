<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="4dp" android:height="128dp" android:gravity="center">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="#f00" />
                <corners android:radius="1024dp"/>
            </shape>
        </rotate>
    </item>
    <item android:width="4dp" android:height="128dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="#0000ff" />
                <corners android:radius="1024dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>