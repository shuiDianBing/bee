<?xml version="1.0" encoding="utf-8"?>
    <!--Android竖虚线绘制 https://blog.csdn.net/nalw2012/article/details/50978656-->
    <!--android:background="@drawable/routate_stroke_dashed_gray"
    android:layerType="software" 必须这种方式否则竖虚线无效-->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:toDegrees="90">
    <shape android:shape="line">
        <stroke android:width="1dp" android:color="#ff888888"
            android:dashWidth="4dp" android:dashGap="2dp" />
    </shape>
</rotate>